{
  "name": "angular2-seed",
  "version": "1.0.0",
  "description": "Base angular2 seed with gulp + browserify + sass + npm packages + minification + serve",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist",
    "typings": "typings install",
    "serve": "http-server . -p 5556",
    "postinstall": "npm run typings",
    "build": "npm run clean && tsc --allowJs && gulp sass && browserify -s main dist/app/main.js > dist/bundle.js",
    "build_dev": "npm run build  && gulp concatCss && npm run serve",
    "build_prod": "npm run build && gulp concatCss && npm run minify",
    "minify": "uglifyjs dist/bundle.js --screw-ie8 --compress --mangle --output dist/bundle.min.js"
  },
  "author": "Minko Gechev <mgechev@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^13.0.1",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.0",
    "gulp-sass": "^2.3.2",
    "http-server": "^0.9.0",
    "typescript": "^1.9.0-dev.20160625-1.0",
    "typings": "1.0.4",
    "uglifyjs": "^2.4.10"
  },
  "dependencies": {
    "@angular/common": "^2.0.0-rc.3",
    "@angular/compiler": "^2.0.0-rc.3",
    "@angular/core": "^2.0.0-rc.3",
    "@angular/platform-browser": "^2.0.0-rc.3",
    "@angular/platform-browser-dynamic": "^2.0.0-rc.3",
    "es6-shim": "^0.35.1",
    "reflect-metadata": "^0.1.3",
    "rxjs": "5.0.0-beta.6",
    "uuid-base64": "^1.0.0",
    "zone.js": "^0.6.6"
  }
}
