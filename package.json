{
  "name": "angular2-seed",
  "version": "0.1.0",
  "description": "Base angular2 seed: gulp, browserify, SASS, npm packages, minification, serve",
  "main": "app/main.js",
  "scripts": {
    "clean": "rm -rf dist",
    "typings": "typings install",
    "tsc": "tsc --allowJs",
    "serve": "http-server . -p 5556",
    "postinstall": "npm run typings",
    "build": "npm run clean && tsc --allowJs && gulp sass && npm run browserify",
    "build_dev": "npm run build && gulp concat && npm run serve",
    "build_prod": "npm run build && gulp concat && npm run minify && npm run serve",
    "minify": "uglifyjs dist/bundle.js --screw-ie8 --compress --mangle --output dist/bundle.min.js",
    "browserify": "browserify dist/app/main.js > dist/bundle.js"
  },
  "author": "Aitor Iba√±ez <freelance@aitoribanez.com>",
  "contributors": [
    {
      "name": "Minko Gechev",
      "email": "mgechev@gmail.com"
    }
  ],
  "license": "GPL-3.0 (https://www.gnu.org/licenses/gpl.html)",
  "devDependencies": {
    "browser-sync": "^2.14.0",
    "browserify": "^13.1.0",
    "empty-file": "^1.0.1",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.0",
    "gulp-minify-css": "^1.2.4",
    "gulp-sass": "^2.3.2",
    "gulp-tsc": "^1.2.0",
    "http-server": "^0.9.0",
    "tsify": "^1.0.4",
    "typescript": "^1.9.0-dev.20160625-1.0",
    "typings": "1.0.4",
    "uglifyjs": "^2.4.10"
  },
  "dependencies": {
    "@angular/common": "^2.0.0-rc.3",
    "@angular/compiler": "^2.0.0-rc.3",
    "@angular/core": "^2.0.0-rc.3",
    "@angular/platform-browser": "^2.0.0-rc.3",
    "@angular/platform-browser-dynamic": "^2.0.0-rc.3",
    "es6-shim": "^0.35.1",
    "reflect-metadata": "^0.1.3",
    "rxjs": "5.0.0-beta.6",
    "uuid-base64": "^1.0.0",
    "zone.js": "^0.6.6"
  }
}
